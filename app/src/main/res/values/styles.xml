<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme"/>

    <!-- 自定义对话框样式 -->
    <style name="customDialogStyle" parent="Theme.AppCompat.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <declare-styleable name="Titlebar">
        <attr name="titleImage" format="reference" />
        <attr name="titleName" format="reference|string" />
        <attr name="leftImage" format="reference" />
        <attr name="leftText" format="reference|string" />
        <attr name="rightImage" format="reference" />
        <attr name="rightText" format="reference|string" />
        <attr name="rightSecondImage" format="reference"/>
        <attr name="rightSecondText" format="reference"/>
    </declare-styleable>

</resources>
