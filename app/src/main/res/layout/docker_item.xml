<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/docker_bar_item_margin_top"
            android:duplicateParentState="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/docker_bar_item_view_margin"
            android:duplicateParentState="true"
            android:paddingBottom="@dimen/docker_bar_item_margin_bottom"
            android:textColor="@drawable/docker_menu_item_textcolor"
            android:textSize="@dimen/docker_bar_item_text_size" />

        <com.soaic.libcommon.weight.badgeView.BadgeView
            android:id="@+id/badgeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/icon"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp" />

    </RelativeLayout>

</layout>

